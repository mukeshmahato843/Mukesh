<?xml version="1.0" encoding="utf-8"?>
<Lockscreen version="1" frameRate="60" screenWidth="1080" >	

	<Var name="aaa" expression="int(#date/10)" />
	<Var name="bbb" expression="int(#date%10)" />
	<Var name="ccc" expression="int(#hour24/10)" />
	<Var name="ddd" expression="int(#hour24%10)" />
	<Var name="eee" expression="ifelse(eq(#hour12,0),1,int(#hour12/10))" />
	<Var name="fff" expression="ifelse(eq(#hour12,0),2,int(#hour12%10))" />
	<Group visibility="eq(#time_format,1)">
		<Text x="497" y="290" align="center" alignV="center" color="#ffffff" size="176" textExp="#ccc"/>
		<Text x="591" y="290" align="center" alignV="center" color="#ffffff" size="176" textExp="#ddd"/>
	</Group>
<Var name="mkm" expression="ifelse(eq(#hour24>15,0),1,0" />
<Group visibility="eq(#hour24,>18)">
<Text x="540" y="1390" align="center" alignV="center" color="#ff0000" size="72" format="%d%%" paras="#battery_level" />
      </Group>  

	<Group visibility="eq(#time_format,0)">
		<Text x="497" y="290" align="center" alignV="center" color="#ffffff" size="176" textExp="#eee"/>
		<Text x="591" y="290" align="center" alignV="center" color="#ffffff" size="176" textExp="#fff"/>
	</Group>
	<Text x="497" y="468" align="center" alignV="center" color="#ffffff" size="176" textExp="int(#minute/10)"/>
	<Text x="591" y="468" align="center" alignV="center"  color="#ffffff" size="176" textExp="int(#minute%10)"/>

<Text x="650" y="528" align="center" alignV="center" color="#ffffff" size="40" textExp="int(#second/10)"/>
<Text x="670" y="528" align="center" alignV="center" color="#ffffff" size="40" textExp="int(#second%10)"/>


	<Text x="540" y="#screen_height-112" align="center" alignV="center"  color="#ffffff" size="36" text="Mukesh Mahato" />	

<Var const="true" expression="100" name="scan_time"/>
   <Var expression="min(#scan_time,#unlock_flag*(#time_sys-#touch_begin_time))" name="unlock_time"/>

<Button h="150" w="150" x="465" y="2028">
<Triggers>
<Trigger action="down">
<VariableCommand const="true" expression="1" name="unlock_flag"/>
<Command target="scan_finger.visibility" value="true"/>
<Command target="vantay_id.animation" value="play"/></Trigger><Trigger action="up">
<ExternCommand command="unlock" condition="eq(#unlock_time,#scan_time)"/>
<Command target="scan_finger.visibility" value="false"/>
<VariableCommand const="true" expression="0" name="unlock_flag"/>
</Trigger>
<Trigger action="cancel">
<VariableCommand const="true" expression="0" name="unlock_flag"/>
<Command target="scan_finger.visibility" value="false"/>
</Trigger>
</Triggers>
</Button>
  

	<!-- 上午下午 -->
	<DateTime x="730" y="528" align="center" alignV="center" color="#ffffff" format="a" size="36" alpha="255" visibility="eq(#time_format,0)"/>
	
	
	
	<!--英文日期-->
	<DateTime x="540" align="center" alignV="center" y="615" color="#ffffff" size="36" format="EEEE MM.dd" />	

