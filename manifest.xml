  <Var name="unlock_dist" expression="300" const="true"/>
  <Var name="move_dx" expression="(#touch_x-#touch_begin_x)"/>
  <Var name="move_dy" expression="(#touch_y-#touch_begin_y)"/>
  <Var name="move_radius" expression="sqrt(#move_dx*#move_dx+#move_dy*#move_dy)"/>
  <Var name="mask1_radius" expression="min(#unlock_dist,#unlocker.move_dist)"/> 
    

<Var name="charge_ani">
    	<VariableAnimation >
    		<AniFrame value="0" time="0" />
    		<AniFrame value="73" time="3524"/>
     	</VariableAnimation>
    </Var>

<Var name="charge_port">
    	<VariableAnimation >
    		<AniFrame value="0" time="0" />
